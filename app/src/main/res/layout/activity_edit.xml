<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarEdit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/content_background"
        android:elevation="4dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="Chỉnh sửa bài viết"
        app:titleTextColor="@color/text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/content_background"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/divider"
                    android:src="@android:drawable/ic_menu_camera" />

                <TextView
                    android:id="@+id/tvSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chạm để đổi ảnh"
                    android:layout_gravity="center"
                    android:textColor="@color/text_secondary"/>
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/edtImageSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nguồn ảnh (VD: Ảnh: Internet)"
                android:textSize="14sp"
                android:background="@drawable/bg_edittext_rounded"
                android:backgroundTint="@color/input_background"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phạm vi tin tức"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/radioGroupScope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbDomestic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trong nước"
                    android:textColor="@color/text_primary"
                    android:checked="true"
                    android:layout_marginEnd="24dp"/>

                <RadioButton
                    android:id="@+id/rbInternational"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:text="Quốc tế" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tiêu đề bài viết"
                android:textColorHint="@color/text_secondary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtUploadTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyên mục"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner_rounded"
                android:popupBackground="@color/content_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tóm tắt ngắn"
                android:textColorHint="@color/text_secondary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtUploadSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textColor="@color/text_primary"
                    android:minLines="2"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Nội dung chi tiết"
                android:textColorHint="@color/text_secondary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtUploadContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="10"
                    android:inputType="textCapSentences|textMultiLine"
                    android:textColor="@color/text_primary"
                    android:gravity="top"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Tác giả"
                android:textColorHint="@color/text_secondary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:textColor="@color/text_primary"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:text="LƯU THAY ĐỔI"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"/>

            <ProgressBar
                android:id="@+id/progressBarUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
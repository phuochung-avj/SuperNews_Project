<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperNews">

        <activity
            android:name=".ui.view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity
            android:name=".ui.view.auth.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.view.auth.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.view.auth.ForgotPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.view.detail.DetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.view.SearchActivity"
            android:exported="false" />

        <activity
            android:name=".ui.view.UploadActivity"
            android:exported="false" />

        <activity
            android:name=".ui.view.EditActivity"
            android:exported="false" />

        <activity
            android:name=".ui.view.SettingsActivity"
            android:exported="false" />

        <activity
            android:name=".ui.view.PhotoViewActivity"
            android:exported="false" />

        <activity
            android:name=".ui.view.AdminLogActivity"
            android:exported="false" />

        <activity
            android:name=".ui.view.ChangePasswordActivity"
            android:exported="false"
            android:label="Đổi mật khẩu" />

        <activity
            android:name=".ui.view.UserManagementActivity"
            android:exported="false"
            android:label="Quản lý tài khoản"/>

        <service
            android:name=".data.service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
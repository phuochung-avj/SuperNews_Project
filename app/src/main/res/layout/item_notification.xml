<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/layoutItemNoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgUnreadDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@android:drawable/radiobutton_off_background"
                app:tint="#F44336"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvNotiTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tiêu đề thông báo"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNotiTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Just now"
                android:textColor="#9E9E9E"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNotiBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Nội dung tóm tắt..."
            android:textColor="#616161"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>